{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["packages/*/env.d.ts", "packages/*/src/**/*", "packages/*/src/**/*.vue", "packages/*/src/**/*.json"],
  "exclude": ["packages/*/src/**/__tests__/*"],
  "compilerOptions": {
    "ignoreDeprecations": "5.0",
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
