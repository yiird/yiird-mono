{
	"compilerOptions": {
		"target": "esnext",
		"rootDir": ".",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["esnext", "dom"],
		"types": ["@popperjs/core/lib"],
		"skipLibCheck": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"./client.d.ts"
, "src/locales/zh.js"	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
