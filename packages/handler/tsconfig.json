{
	"include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"useDefineForClassFields": true,
		"jsx": "preserve",
		"noImplicitThis": true,
		"strict": true,
		"isolatedModules": true,
		"target": "ESNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"types": ["node"],
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
