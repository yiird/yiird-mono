{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"baseUrl":".",
		"skipLibCheck":true,
		"lib": ["esnext"],
	},
	"exclude": ["node_modules","coverage", "dist","scripts","__test__/**/*.test.ts"]
}
